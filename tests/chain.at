## --------- ##
## Lalonde.  ##
## --------- ##

# AT_TEST(SKELETON, [DIRECTIVES])
# -------------------------------
m4_pushdef([AT_TEST],
[
AT_SETUP([Lalonde: $1 $2])

AT_CHAIN_PARSERS([expr term], [%skeleton "$1" $2],
[[
res:  expr { printf ("%d\n", $][1); };
expr: expr '+' term { $$ = $][1 + $][3; } | term;
term: term '*' NUM  { $$ = $][1 * $][3; } | NUM;
]])

AT_SETS_CHECK([with-chains.traces], [DESCENDANTS, LEAVES],
[[DESCENDANTS
  $accept: $accept
  res: res
  expr: expr
  term: term
LEAVES
  $accept: $accept
  res: res
  expr: expr
  term: term
]])

AT_SETS_CHECK([without-chains.traces], [DESCENDANTS, LEAVES],
[[DESCENDANTS
  $accept: $accept
  res: res
  expr: NUM expr term
  term: NUM term
LEAVES
  $accept: $accept
  res: res
  expr: NUM
  term: NUM
]])

AT_CHAIN_CHECK([1],          [1], [], [3], [1])
AT_CHAIN_CHECK([1+2],        [3], [], [5], [2])
AT_CHAIN_CHECK([1+2*3],      [7], [], [6], [3])
AT_CHAIN_CHECK([1+2*3*4+5], [30], [], [9], [5])
AT_CHAIN_CHECK([1*2+3+4*5], [25], [], [9], [5])

AT_LAC_IF(
[AT_CHAIN_CHECK([42 51], [],   [syntax error, unexpected NUM, expecting $end or '+' or '*'], [1], [0])
 AT_CHAIN_CHECK([16++],  [],   [syntax error, unexpected '+', expecting NUM],                [2], [0])],
[AT_CHAIN_CHECK([42 51], [42], [syntax error, unexpected NUM, expecting $end],               [3], [1])
 AT_CHAIN_CHECK([16++],  [],   [syntax error, unexpected '+', expecting NUM],                [2], [0])])

AT_BISON_OPTION_POPDEFS
AT_CLEANUP
])

AT_TEST([yacc.c])
AT_TEST([yacc.c], [%define parse.lac full])
AT_TEST([lalr1.cc])

m4_popdef([AT_TEST])



